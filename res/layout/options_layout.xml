<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:background="@drawable/options_background2">
    <ToggleButton android:id="@+id/tb_options_expand"
        android:scaleX="1"
        android:scaleY="1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"        
        android:textOn=""
        android:textOff=""        
        android:background="@drawable/options_selector"       
        android:checked="false"/>
	<ToggleButton android:id="@+id/tb_options__music"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textOn=""
        android:textOff=""
        android:visibility="gone"        
        android:background="@drawable/music_selector"/>
	<ToggleButton android:id="@+id/tb_options_sound"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textOn=""
        android:textOff=""
        android:visibility="gone"        
        android:background="@drawable/sound_selector"/>
</LinearLayout>
